# Rootkit Hunter configuration
# Generated by Ansible - Do not edit manually

# General Options
UPDATE_MIRRORS=1
MIRRORS_MODE=0
WEB_CMD=""
TMPDIR=/var/lib/rkhunter/tmp
DBDIR=/var/lib/rkhunter/db
SCRIPTDIR=/usr/share/rkhunter/scripts
LOGFILE=/var/log/rkhunter.log

# Update Options
UPDATE_LANG="en"
UPDATE_LOCAL_MIRRORS=0

# Scan Options
AUTO_X_DETECT=1
ALLOW_SSH_ROOT_USER={{ ssh_permit_root_login }}
ALLOW_SSH_PROT_V1=0
ENABLE_TESTS=all
DISABLE_TESTS=suspscan hidden_procs deleted_files packet_cap_apps apps
HASH_FUNC=sha256
PKGMGR=DPKG
SCRIPTWHITELIST=/usr/bin/egrep
SCRIPTWHITELIST=/usr/bin/fgrep
SCRIPTWHITELIST=/usr/bin/which
SCRIPTWHITELIST=/usr/bin/ldd
SCRIPTWHITELIST=/bin/which

# Reporting Options
MAIL_ON_WARNING={{ unattended_upgrades_mail }}
MAIL_CMD=mail -s "[rkhunter] Warnings found for ${HOST_NAME}"
COPY_LOG_ON_ERROR=0
USE_SYSLOG=authpriv.warning
COLOR_SET2=0
SHOW_SUMMARY_WARNINGS_NUMBER=1

# Whitelist Options
WHITELIST_DEV_WHITELIST=/dev/shm
APP_WHITELIST=""
SUSPSCAN_WHITELIST=""

# Scan Mode Options
SCANROOTKITMODE=THOROUGH
UNHIDE_TESTS=sys