# Semaphore Environment Variables
SEMAPHORE_DB={{ semaphore_db_type }}
SEMAPHORE_PLAYBOOK_PATH=/tmp/semaphore
SEMAPHORE_PORT=3000
SEMAPHORE_WEB_ROOT={{ semaphore_web_root }}

# Admin credentials for initial setup
SEMAPHORE_ADMIN={{ semaphore_admin_user }}
SEMAPHORE_ADMIN_PASSWORD={{ semaphore_admin_password }}
SEMAPHORE_ADMIN_NAME={{ semaphore_admin_name }}
SEMAPHORE_ADMIN_EMAIL={{ semaphore_admin_email }}

# Security tokens
SEMAPHORE_ACCESS_KEY_ENCRYPTION={{ semaphore_cookie_encryption }}
SEMAPHORE_COOKIE_HASH={{ semaphore_cookie_hash }}
SEMAPHORE_COOKIE_ENCRYPTION={{ semaphore_cookie_encryption }}

# Database settings
{% if semaphore_db_type == 'mysql' %}
SEMAPHORE_DB_HOST={{ semaphore_db_host }}
SEMAPHORE_DB_PORT={{ semaphore_db_port }}
SEMAPHORE_DB_USER={{ semaphore_db_user }}
SEMAPHORE_DB_PASS={{ semaphore_db_password }}
SEMAPHORE_DB_NAME={{ semaphore_db_name }}
{% elif semaphore_db_type == 'postgres' %}
SEMAPHORE_DB_HOST={{ semaphore_db_host }}
SEMAPHORE_DB_PORT={{ semaphore_db_port }}
SEMAPHORE_DB_USER={{ semaphore_db_user }}
SEMAPHORE_DB_PASS={{ semaphore_db_password }}
SEMAPHORE_DB_NAME={{ semaphore_db_name }}
{% else %}
SEMAPHORE_DB_PATH=/var/lib/semaphore/database.db
{% endif %}

# Git client
SEMAPHORE_GIT_CLIENT={{ semaphore_git_client }}