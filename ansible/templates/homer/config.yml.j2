---
# Homer Dashboard Configuration
# Dynamic configuration for PrivateBox services

title: "PrivateBox Dashboard"
subtitle: "Home Network Services"
logo: "logo.png"

header: true
footer: false
connectivityCheck: true

theme: default
colors:
  light:
    highlight-primary: "#3367d6"
    highlight-secondary: "#4285f4"
    highlight-hover: "#5a95f5"
    background: "#f5f5f5"
    card-background: "#ffffff"
    text: "#363636"
    text-header: "#ffffff"
    text-title: "#303030"
    text-subtitle: "#424242"
    card-shadow: rgba(0, 0, 0, 0.1)
    link-hover: "#363636"
  dark:
    highlight-primary: "#3367d6"
    highlight-secondary: "#4285f4"
    highlight-hover: "#5a95f5"
    background: "#131313"
    card-background: "#2b2b2b"
    text: "#eaeaea"
    text-header: "#ffffff"
    text-title: "#fafafa"
    text-subtitle: "#f5f5f5"
    card-shadow: rgba(0, 0, 0, 0.4)
    link-hover: "#ffdd57"

{% if headplane_api_key != "" %}
# Credentials banner - displayed until user runs "Homer 2: Clear Credentials"
message:
  style: "is-info"
  title: "ðŸ”‘ Headplane Access Credentials"
  icon: "fa fa-key"
  content: |
    <strong>API Key:</strong> <code>{{ headplane_api_key }}</code><br><br>
    Use this key to log in to <a href="https://headplane.{{ custom_domain }}/admin" target="_blank"><strong>Headplane</strong></a> (VPN Management).<br>
    After logging in, your session will be saved. Run <strong>"Homer 2: Clear Credentials"</strong> in Semaphore to hide this message.
{% endif %}

links: []

services:
  - name: "Network Services"
    icon: "fas fa-network-wired"
    items:
      - name: "AdGuard Home"
        logo: "assets/tools/adguardhome.png"
        subtitle: "DNS Filtering"
        tag: "privacy"
        url: "https://adguard.{{ custom_domain }}"
        target: "_blank"

      - name: "OPNsense"
        logo: "assets/tools/opnsense.png"
        subtitle: "Firewall & Router"
        tag: "network"
        url: "https://opnsense.{{ custom_domain }}"
        target: "_blank"

      - name: "Headplane"
        logo: "assets/tools/headscale.png"
        subtitle: "VPN Management"
        tag: "vpn"
        url: "https://headplane.{{ custom_domain }}/admin"
        target: "_blank"

  - name: "Management"
    icon: "fas fa-tools"
    items:
      - name: "Portainer"
        logo: "assets/tools/portainer.png"
        subtitle: "Container Management"
        tag: "management"
        url: "https://portainer.{{ custom_domain }}"
        target: "_blank"

      - name: "Semaphore"
        logo: "assets/tools/ansible.png"
        subtitle: "Ansible Automation"
        tag: "automation"
        url: "https://semaphore.{{ custom_domain }}"
        target: "_blank"

      - name: "Proxmox"
        logo: "assets/tools/proxmox.png"
        subtitle: "Virtualization Platform"
        tag: "infrastructure"
        url: "https://proxmox.{{ custom_domain }}"
        target: "_blank"
