---
# Vault file template - Copy to vault.yml and encrypt with ansible-vault
# ansible-vault encrypt vault.yml

# Proxmox credentials
vault_proxmox_api_user: root@pam
vault_proxmox_api_password: changeme

# OPNsense credentials
vault_opnsense_admin_password: changeme

# Portainer credentials
vault_portainer_admin_password: changeme

# Semaphore credentials
vault_semaphore_admin_password: changeme
vault_semaphore_db_password: changeme  # If using MySQL/PostgreSQL

# AdGuard Home credentials
vault_adguard_admin_password: changeme

# Grafana credentials (future)
vault_grafana_admin_password: changeme

# Database passwords
vault_mysql_root_password: changeme
vault_postgres_password: changeme

# Email configuration
vault_email_password: changeme

# LDAP configuration
vault_ldap_bind_password: changeme

# Backup encryption
vault_backup_encryption_key: changeme

# API tokens
vault_github_token: changeme
vault_gitlab_token: changeme